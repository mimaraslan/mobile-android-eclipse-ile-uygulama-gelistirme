<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/linearLayout1" android:layout_width="fill_parent"
android:layout_height="fill_parent" >

<TextView
    android:id="@+id/tvBirinci"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:text="KİTAP" 
    android:padding="10dip" />

<TextView
android:id="@+id/tvIkinci" android:layout_width="0dp"
android:layout_height="wrap_content" android:layout_weight="2"
android:text="YAZAR"/>

<TextView
android:id="@+id/tvUcuncu" android:layout_width="0dp"
android:layout_height="wrap_content" android:layout_weight="1"
android:text="SAYFA"/>

<TextView
android:id="@+id/tvDorduncu" android:layout_width="0dp"
android:layout_height="wrap_content" android:layout_weight="1"
android:text="FİYAT"/>
</LinearLayout>
